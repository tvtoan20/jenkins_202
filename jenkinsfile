pipeline {
    agent { 
        node {
            label 'Node'
            }
      }
    #triggers {
    #    pollSCM '*/1 * * * *'
    #}
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                docker build -t hello_there .
                '''
            }
        }
        stage('Run') {
            steps {
                echo "Running.."
                sh '''
                docker run --rm hello_there
                '''
            }
        }
        
    }
}
